<html prefix="og: http://ogp.me/ns#" lang="en">
    <head>
        <%- include('partials/head') %>
        <script type="text/javascript" src="/resources/js/url-spider.js"></script>
    </head>
    <body class="bg-light">
        <%- include('partials/header') %>
        <section>
            <div class="container">
                <div class="row text-center mt-5">
                    <h1 class="text-dark">URL Spider/Crawler</h1>
                    <h2 class="text-secondary lead">Crawl through all available links on a single page</h2>
                </div>
                <div class="row pt-4 pb-4 w-100 mx-auto">
                    <div class="col-10 col-md-12 bg-white pt-2 pb-2 rounded-3 d-flex align-items-center m-auto">
                        <div class="input-group">
                            <input type="text" class="form-control shadow-none w-50 border-0" placeholder="Enter URL" aria-label="url" aria-describedby="url" id="url">
                            <span class="input-group-text border-0 bg-white d-flex" id="url-clear" role="button">
                                <i class="fa-solid fa-xmark"></i>
                            </span>
                            <button class="btn btn-primary rounded-2 ps-3 pe-3 ms-2 me-2" type="button" id="url-crawl"><i class="fa-solid fa-spider"></i> Crawl</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-9" id="crawl-result-container">
                        <%- include('partials/loading') %>
                        <div id="crawl-results"><!-- checked urls will be appended here --></div>
                    </div>
                    <div class="col-3 d-flex flex-column bg-white p-4 rounded">
                        <div role="button" class="uri-stats p-2 text-dark" id="uri-stats-total">Total URLs: <span>0</span></div>
                        <div role="button" class="uri-stats p-2 text-success" id="uri-stats-2xx">2xx: <span>0</span></div>
                        <div role="button" class="uri-stats p-2 text-info" id="uri-stats-3xx">3xx: <span>0</span></div>
                        <div role="button" class="uri-stats p-2 text-warning" id="uri-stats-4xx">4xx: <span>0</span></div>
                        <div role="button" class="uri-stats p-2 text-danger" id="uri-stats-5xx">5xx: <span>0</span></div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('partials/footer') %>
    </body>
</html>